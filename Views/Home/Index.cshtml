@{
  Layout= "_HomeLayout";
}
@using ilanApp.Models

@model AdvertViewModel
<div class="container my-3">

<div class="row g-4">

@foreach (advertInfo crd in Model.AdvertsV)
 {

   <div class="col-lg-3 col-md-6 col-6">
   <a asp-controller="Create" asp-action="AdvertDetails" asp-route-id="@crd.id" 
   class="text-decoration-none text-dark">
<div class="card mx-auto w-100 h-100" style="width: 18rem;">
  <div class="ratio ratio-1x1">
   <img src="@crd.image" class="card-img-top " style="object-fit: cover; width: 100%; height: 100%; background:white" alt="...">
  </div>
  
  <div class="card-body  d-flex flex-column">
    <h5 class="card-title text-truncate"">@crd.title</h5>
    <h6 class="card-subtitle mb-2 text-body-secondary">İstanbul-Avcılar</h6>
    <p class="card-text line-clamp-3 flex-grow-1">@crd.desc</p>
   <div class="row align-items-center mb-2 text-center mt-auto">
  <div class="col-9 text-start">
    <span class="fw-bold text-success">₺@crd.price</span>
  </div>
  <div class="col-3 text-end">
    <button class="btn btn-light border-0 p-0">
      <i class="bi bi-star-fill text-warning fs-5"></i>
    </button>
  </div>
</div>
</div>
</div>
</a>
</div>

 }
</div></div>